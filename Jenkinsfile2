pipeline {
    agent any

    tools {
        jdk 'jdk11'
        maven 'maven3'
    }

    stages {
        stage ('checkout SCM'){
            steps {
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/naresh9919/spring-petclinic.git'
            }
        }

        stage ('maven Build'){
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Build docker image'){
            steps{
                script{
                    sh 'docker build -t spring-petclinic .'
                }
            }
        }
        
        stage("Docker Build & Push"){
            steps{
                script{
                   withDockerRegistry(credentialsId: 'dockerhub-cred', toolName: 'docker') {
                        
                        sh "docker tag spring-petclinic nareshbabu1991/spring-petclinic:latest "
                        sh "docker push nareshbabu1991/spring-petclinic:latest "
                    }
                }
            }
        }

        stage ("deployment to k8s") {
            steps {
                script {
                    withKubeConfig([credentialsId: 'k8s']){
                        sh 'helm install -f petclinic-chart/values-prod.yaml first ./petclinic-chart --namespace helm-deployment --set image.tag=$BUILD_NUMBER'
                    }
                }
            }
        }
    }
}
