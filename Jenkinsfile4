pipeline {
    agent any

    tools {
        jdk 'jdk11'
        maven 'maven3'
    }

    stages {
        stage ('checkout SCM'){
            steps {
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/naresh9919/spring-petclinic.git'
            }
        }

        stage ('maven Build'){
            steps {
                sh 'mvn clean install'
            }
        }

     stage ('deploy playbook'){
            steps {
                sh 'ansiblePlaybook credentialsId: 'ansible-cred', installation: 'ansible', inventory: 'hosts', playbook: 'ansibleplaybook.yaml''
            }
        }
    }
}
